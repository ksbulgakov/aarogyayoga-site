<!-- Page Header -->
<!-- Set your background image for this header in your post front-matter: cover -->
<%
    var cover = theme.index_cover_contacts || theme.index_cover;
    item.title = 'Контакты';
%>
<header class="intro-header" style="background-image: url('<%- cover %>')">
    <div class="container">
        <div class="row">
            <div class="col-lg-8 col-lg-offset-2 col-md-10 col-md-offset-1">
                <div class="site-heading">
                    <h1><%- item.title || config.title || "Untitled" %></h1>
                </div>
            </div>
        </div>
    </div>
</header>

<!-- Post Content -->
<section>
    <div class="container">
        <div class="row">

            <!-- Post Main Content -->
            <div class="col-lg-8 col-lg-offset-2 col-md-10 col-md-offset-1">
                <div>
                    <%- item.content %>
                </div>
                <div class="embed-responsive embed-responsive-16by9">
                    <iframe src="https://yandex.ru/map-widget/v1/-/CCf6qWLo" width="560" height="400" style="border:none;" frameborder="1" allowfullscreen="true"></iframe>
                </div>
                <div style="margin-top:20px;">
                    <img src="<%- item.photos[0] %>" class="img-thumbnail img-responsive" />
                </div>
            </div>
            
        </div>
    </div>
</section>